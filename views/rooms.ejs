<div class="row">
    <% rooms.forEach(function(room) { %>
        <div class="col-sm-6">
            <div class="card" style="width: 18rem;">
                <img src="/images/<%= room.type %>.png" class="card-img-top" alt="..." height="200">
                <div class="card-body">
                <h5 class="card-title"><%= room.type %></h5>
                <p class="card-text"><%= room.description %></p>
                </div>
                <ul class="list-group list-group-flush">
                <li class="list-group-item">Aparelhos:</li>
                <li class="list-group-item">Consumo estimado: <%= room.consumption %></li>
                <li class="list-group-item">Custo Mensal: <%= room.monthlyCost %></li>
                </ul>
                <div class="card-body">
                <a href="/room/update/<%= room.id %>" class="card-link" data-id="<%= room.id %>">Editar</a>
                <a href="/room/delete/<%= room.id %>" class="card-link" data-id="<%= room.id %>">Excluir</a>
                </div>
            </div>
        </div>
    <% }); %>
</div>
